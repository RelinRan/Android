<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/android_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/android_tv_take"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/android_take_photo"
            android:gravity="center"
            android:text="录制"
            android:textColor="@color/colorDialogText"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDialogDivider"></View>

        <TextView
            android:id="@+id/android_tv_video"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/android_photo"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/colorDialogText"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/android_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/android_image_selector"
        android:gravity="center"
        android:text="取消"
        android:textColor="#5D5D5D"
        android:textSize="14sp" />

</LinearLayout>