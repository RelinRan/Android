<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_refresh_arrow"
            android:layout_width="13sp"
            android:layout_height="13dp"
            android:layout_alignLeft="@+id/tv_refresh_state"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-30dp"
            android:src="@drawable/android_ic_refresh_arrow_down"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_refresh_loading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/tv_refresh_state"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-40dp"
            android:background="@drawable/android_anim_loading_refresh"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_refresh_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="下拉刷新"
            android:textColor="@color/colorRefreshText"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_refresh_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/tv_refresh_state"
            android:background="@drawable/android_ic_refresh_succeed"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>